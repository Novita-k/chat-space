.side-bar
  .side-bar__user-name
    .side-bar__user-name__header-items
      %p.header-items__name
        = current_user.nickname
      %ul.side-bar__user-name__header-items__icons
        %li.side-bar__user-name__header-items__icons__new-group
          =link_to new_group_path do
            = icon('far', 'edit', class: 'icon')
        %li.side-bar__user-name__header-items__icons__user-edit
          =link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__group-list
    .side-bar__group-list__box
      - current_user.groups.each do |group|
        .side-bar__group-list__box__name
          = link_to group_messages_path(group) do
            = group.name
        .side-bar__group-list__box__message
          %p まだありません