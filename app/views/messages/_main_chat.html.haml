.chat-main
  .chat-main__group-info
    .chat-main__group-info__box
      .chat-main__group-info__box__group
        %p group
      .chat-main__group-info__box__member
        %p Member:masa
    .chat-main__group-info__edit
      =link_to "Edit", "#", class: "edit-btn"
  .chat-main__message-list
    .chat-main__message-list__box
      .chat-main__message-list__box__data
        %p.chat-name masa
        %p.comment-time 2019/11/20(wed) 17:43:01
      .chat-main__message-list__box__comment
        %p.chat-comment おはよう！
      .chat-main__message-list__box__data
        %p.chat-name masa 
        %p.comment-time 2019/11/20(wed) 17:43:34
      .chat-main__message-list__box__comment
        %p.chat-comment 今日は雨
  .chat-main__message-form
    .chat-main__message-form__comment-box
      = form_for [@group, @message] do |f|
        = f.text_field :content, placeholder: 'type a message'
        .chat-main__message-form__comment-box__image
           = f.label :image, class: 'form__mask__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'hidden'
    .chat-main__message-form__send-btn
        = f.submit 'Send', class: 'form__submit'

